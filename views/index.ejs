<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
   <title>Document</title>
</head>
<body>
   <div class="container-sm">
      <h1>Url Shrinker</h1>

      <form action="/shortUrls" method="POST" class="my-4 form-inline">
         <label class="sr-only" for="fullUrl">Url</label>
         <input class="form-control col mr-2" type="url" name="fullUrl" id="fullUrl">
         <button class="btn btn-primary" type="submit">Shrinker </button>

      </form>

      <table class="table table-striped table">
         <thead>
            <tr>
               <th>Full Url</th>
               <th>Short Url</th>
               <th>Clicks </th>
            </tr>
         </thead>

         <tbody>
            <% shortUrls.forEach(e => { %> 
               <tr>
                  <th> <a target="_blank" href=" <%= e.full  %>"> <%= e.full %> </a></th>
                  <th><a target="_blank" href=" <%= e.short  %> "> <%= e.short %></a></th>
                  <th> <%= e.clicks %> </th>
               </tr>
            <% }) %> 
         </tbody>


        
      </table>
   </div>
</body>
</html>